{
    "compilerOptions": {
        "target": "es2024",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "baseUrl": "./src",
        "paths": {
            "@test-utils": ["setupTests.tsx"]
        }
    },
    "include": ["src/**/*"]
}
